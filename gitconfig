[color]
  status = auto
  branch = auto
  diff = auto
  interactive = auto
  ui = 1
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red
  new = green
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  st = status
  ci = commit
  ac = !git add -A && git commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  branches = branch -a
  tags = tag -l
  remotes = remote -v
  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
  staash = stash --include-untracked
  staaash = stash --all
  which = !git branch | grep -i
  lucky = !sh -c 'git checkout $(git which $1 -m1)' -
  wtc = !git commit -m \"$(curl -s whatthecommit.com/index.txt)\"
[push]
  default = simple
[help]
  autocorrect = 1
[core]
  editor = /usr/local/bin/vim
  autocrlf = input
[include]
  path = ~/.gitconfig.local
